{
  "appId": "com.vtxmus.app",
  "productName": "VTxMus",
  "asar": true,
  "compression": "normal",
  "directories": {
    "output": "release",
    "buildResources": "public"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "package.json",
    "node_modules/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "public/VTxMus.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "VTxMus",
    "perMachine": false,
    "runAfterFinish": true,
    "deleteAppDataOnUninstall": false
  },
  "mac": {
    "target": "dmg",
    "icon": "public/VTxMus.png"
  },
  "linux": {
    "target": "AppImage",
    "icon": "public/VTxMus.png"
  }
}

